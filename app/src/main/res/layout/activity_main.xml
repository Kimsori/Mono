<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.fuck.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/Thread"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="mOnClick"
                            android:text="앱 사용시간 측정하기" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4pt"
                                android:layout_weight="1"
                                android:text="앱 사용시간: "
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/mainValue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4pt"
                                android:layout_weight="1"
                                android:textSize="20dp" />

                        </LinearLayout>
                        <!--android:gravity="center_horizontal"-->

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp" />
                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/DataBase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                app:srcCompat="@drawable/tab_1"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="38dp"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginStart="16dp" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                app:srcCompat="@drawable/tab_2"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="190dp"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginStart="16dp" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                app:srcCompat="@drawable/tab_3"
                                android:layout_marginLeft="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="328dp"
                                android:layout_marginStart="16dp" />

                            <Button
                                android:id="@+id/button1"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:text="예매하기"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="nextScene1"
                                android:layout_marginTop="78dp"
                                android:layout_marginLeft="263dp"
                                app:layout_constraintLeft_toLeftOf="parent" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:text="예매하기"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="nextScene2"
                                android:layout_marginTop="230dp"
                                android:layout_marginLeft="263dp"
                                app:layout_constraintLeft_toLeftOf="parent" />



                            <Button
                                android:id="@+id/button3"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:text="예매하기"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="nextScene3"
                                android:layout_marginTop="368dp"
                                android:layout_marginLeft="263dp"
                                app:layout_constraintLeft_toLeftOf="parent" />

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="158dp"
                                android:onClick="nextScene6"
                                android:layout_marginTop="368dp"
                                android:text="정보보기"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="158dp"
                                android:onClick="nextScene4"
                                android:layout_marginTop="78dp"
                                android:text="정보보기"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/button7"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="158dp"
                                android:onClick="nextScene5"
                                android:layout_marginTop="230dp"
                                android:text="정보보기"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="210dp"
                                android:layout_height="58dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="맘마미아"
                                android:gravity="center"
                                android:layout_marginLeft="158dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="168dp" />

                            <EditText
                                android:id="@+id/editText6"
                                android:layout_width="210dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="158dp"
                                android:layout_marginTop="310dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:text="레미제라블"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/editText5"
                                android:layout_width="210dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="158dp"
                                android:layout_marginTop="16dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:text="오페라의 유령"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </android.support.constraint.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Ta_Map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <fragment
                            android:id="@+id/mvGetLocation"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
        </TabHost>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
